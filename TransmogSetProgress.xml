 <Ui xmlns="http://www.blizzard.com/wow/ui/"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ../../FrameXML/UI.xsd">
	 
	<Include file="libs\DropDownMenu\UIDropDownMenuTemplates.xml"/>
	<Script file="Libs\DropDownMenu\UIDropDownMenu.lua"/>
	 
	<Script file="Libs\LibStub\LibStub.lua"/>
	<Include file="libs\AceAddon-3.0\AceAddon-3.0.xml"/>
	<Script file="TransmogSetProgress.lua"/>

	<Button name="TSP_SettingsButton" inherits="UIMenuButtonStretchTemplate" text="TSP" frameStrata="HIGH">
		<Size x="60" y="22"/>
		<Frames>
			<Frame name="TSP_SettingsDropDown" inherits="Lib_UIDropDownMenuTemplate" enableMouse="true" hidden="true"/>
		</Frames>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="Icon" file="Interface\ChatFrame\ChatFrameExpandArrow">
					<Size x="10" y="12"/>
					<Anchors>
						<Anchor point="RIGHT" relativeKey="$parent.Right" relativePoint="RIGHT" x="-5"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnClick> 
				PlaySound("igMainMenuOptionCheckBoxOn");
				<!--PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON);-->
				Lib_ToggleDropDownMenu(1, nil, TSP_SettingsDropDown, "TSP_SettingsButton", 50, 15, nil, self, 2);
			</OnClick>	
		</Scripts>						
	</Button>
	
 </Ui>